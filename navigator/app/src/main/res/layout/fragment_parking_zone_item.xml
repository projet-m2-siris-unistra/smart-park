<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="android.graphics.Color"/>
        <import type="androidx.databinding.adapters.Converters"/>

        <variable
            name="zone"
            type="fr.smartpark.navigator.data.ParkingZone" />

        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />
    </data>

    <FrameLayout
        android:id="@+id/zone_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@{Converters.convertColorToDrawable(Color.parseColor(zone.color))}"
        android:onClick="@{clickListener}"
        android:transitionName="@{@string/transition_zone_card(zone.zoneId)}">

        <include
            android:id="@+id/zone_card_content"
            layout="@layout/parking_zone_card"
            bind:zone="@{zone}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </FrameLayout>
</layout>
