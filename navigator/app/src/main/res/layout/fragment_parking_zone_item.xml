<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="zone"
            type="fr.smartpark.navigator.data.ParkingZone" />

        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{clickListener}"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/zone_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="@{zone.zoneId}"
            android:transitionName="@{@string/transition_zone_id(zone.zoneId)}"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/zone_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="@{zone.name}"
            android:transitionName="@{@string/transition_zone_name(zone.zoneId)}"
            android:textAppearance="?attr/textAppearanceListItem" />
    </LinearLayout>
</layout>
